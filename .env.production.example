APP_NAME=TrustFolio
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=notice

DB_CONNECTION=sqlite
# For SQLite (default for simple deployments)
DB_DATABASE=/path/to/your/database.sqlite

# For MySQL/PostgreSQL (recommended for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=trustfolio
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_secure_password

SESSION_DRIVER=database
SESSION_LIFETIME=120

CACHE_STORE=database
CACHE_PREFIX=tf_

QUEUE_CONNECTION=database

# Redis (optional, for caching/sessions)
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# File storage
FILESYSTEM_DISK=local

# Mail (optional)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailprovider.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email
# MAIL_PASSWORD=your_email_password

# --------------------------------------
# Stripe Configuration (REQUIRED for payments)
# --------------------------------------
STRIPE_KEY=pk_live_your_publishable_key
STRIPE_SECRET=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_MONTHLY_PRICE_ID=price_monthly_id_from_stripe
STRIPE_ANNUAL_PRICE_ID=price_annual_id_from_stripe

# --------------------------------------
# Telegram Bot (OPTIONAL for notifications)
# --------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
